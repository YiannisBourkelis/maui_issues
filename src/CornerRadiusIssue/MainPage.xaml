<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CornerRadiusIssue.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <ImageButton
                x:Name="AddItemImageButton"
                HorizontalOptions="End"
                VerticalOptions="End"
                CornerRadius="25"
                WidthRequest="50"
                HeightRequest="50"
                BackgroundColor="DodgerBlue"
                Margin="0,0,20,20">
                
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="OpenSansRegular"
                        Color="White"
                        Glyph="+" />
                </ImageButton.Source>
                
            </ImageButton>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

